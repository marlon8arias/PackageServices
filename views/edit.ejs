<% if (user) { %>
  <div class="container mt-4">
    <div class="card border-secondary">
        <div class="card-header">Editar Registro</div>
        <div class="card-body">
            <form action="/update" method="POST">
                <input id="id" name="id" value="<%= user.id %>" hidden >
                <div class="mb-3">
                    <label for="user" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="<%= user.nombre %>" tabindex="1">
                </div>
                <div class="mb-3">
                  <label for="apellido" class="form-label">Apellido</label>
                  <input type="text" class="form-control" id="apellido" name="apellido" value="<%= user.apellido %>" tabindex="1">
              </div>
              <div class="mb-3">
                <label for="direccion" class="form-label">Dirección</label>
                <input type="text" class="form-control" id="direccion" name="direccion" value="<%= user.direccion %>" tabindex="1">
            </div>
            <div class="mb-3">
              <label for="direccion" class="form-label">Descripción</label>
              <input type="text" class="form-control" id="descripcion" name="description" value="<%= user.description %>" tabindex="1">
          </div>
                <div class="mb-3">
                    <label for="user" class="form-label">Nivel de orden</label>
                    <select id="rol" name="rol" class="form-select form-control" tabindex="2">
                        <option <%= user.rol=='Plata' ? "selected" : '' %> value="Plata">Plata</option>
                        <option <%= user.rol=='Bronce' ? "selected" : '' %> value="Bronce">Bronce</option>
                        <option <%= user.rol=='Oro' ? "selected" : '' %> value="Oro">Oro</option>
                      </select>
                </div>
                <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                <a href="/welcome" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
        </div>
    </div>
  </div>
  <% } %>
  <script src="/bootstrap.min.css"></script>
</body>
</html>
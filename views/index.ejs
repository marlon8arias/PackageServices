

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Index</title>

  <link rel="stylesheet" href="/bootstrap.min.css">
  <link rel="stylesheet" href="/fonts/style.css">
  <link rel="stylesheet" href="/DataTables/dataTables.bootstrap4.min.css">
  <style>
    .cajaTabla{
      margin-left: 10px !important;
      margin-right: 10px !important;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a href="/welcome" class="navbar-brand">Inicio</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        </ul>
      </div>
    </div>
  </nav> 
<br>
<div class="cajaTabla">

  <!-- BABY, este es el lugar de nuestra tabla-->
  <table id="users" class="table table-bordered table-striped text-center mt-4">
      <thead class="table-dark">
        <tr>
          <th scope="col">NOMBRE</th>
          <th scope="col">PLAN</th>
          <th scope="col">ID</th>
          <th scope="col">DIRECCION</th>
          <th scope="col">DESCRIPCION</th>
          <th scope="col">ACIONES</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% results.forEach((user)=> { %>
          <td><%= user.nombre%> <%= user.apellido %></td>
          <td><%= user.rol %></td>
          <td><%= user.id %></td>
          <td><%= user.direccion%></td>
          <td><%= user.description%></td>
          <td>
            <a href="/edit/<%= user.id %>" class="btn btn-outline-info"><i class="icon icon-create"></i></a>
            <!-- <a href="/delete/<%= user.id %>" onclick="return confirm ('Estas seguro?')" class="btn btn-outline-danger"><i class="icon icon-delete"></i></a> -->
             <a onclick="confirmar(<%= user.id %>)" class="btn btn-outline-danger"><i class="icon icon-delete"></i></a>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
</div>

  <script src="/DataTables/jquery-3.5.1.js"></script>
  <script src="/DataTables/jquery.dataTables.min.js"></script>
  <script src="/DataTables/dataTables.bootstrap4.min.js"></script>

  <script src="/bootstrap.min.css"></script>
  <script src="/sweetalert2.js"></script>
  <script>
    $(document).ready(function () {
        $('#users').DataTable();
    });


    function confirmar(id) {
        Swal.fire({
            title: 'En verdad quieres eliminarlo?',
            text: "El registro se iliminara de forma permanente.",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Si, eliminalo.'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location = '/delete/'+id;
            }
        })
    }

</script>
<script src="/bootstrap.bundle.min.js"></script>
</body>
</html>